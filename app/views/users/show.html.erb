<% provide :title, @user.name %>
<%= @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
    <% if @user.entries.any? %>
      <h3><%= t "entries.tittle" %> (<%= @user.entries.count %>)</h3>
      <ol class="microposts">
        <%= render @entries.recent %>
      </ol>
      <%= paginate @entries.recent, theme: "twitter-bootstrap-3" %>
    <% end %>
  </div>
</div>
