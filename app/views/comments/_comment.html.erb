<li id="comment-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user, size:Settings.entries_blog.size),
    comment.user %>
  <span class="user"><%= link_to comment.user.name, comment.user %></span>
  <span class="content">
    <%= comment.content %>
  </span>
  <span class="timestamp">
    <%=raw t("entries.time_ago",
             time:time_ago_in_words(comment.created_at)) %>
  </span>
</li>
